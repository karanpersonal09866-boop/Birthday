        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'soft-lavender': '#E6E0F8', 
                        'deep-violet': '#5D3FD3', 
                        'soft-rose': '#FFC0CB', 
                        'lock-bg': '#FFFAFB', // Light, airy background for the lock screen
                    },
                    keyframes: {
                        pulse_heart: {
                            '0%, 100%': { transform: 'scale(1)' },
                            '50%': { transform: 'scale(1.15)' },
                        }
                    },
                    animation: {
                        'pulse-heart-slow': 'pulse_heart 1.5s infinite ease-in-out',
                    },
                }
            }
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
