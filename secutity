<body id="lock-screen" class="handwriting-font">

    <!-- The message that appears on successful unlock -->
    <div id="yay-message" class="handwriting-font text-deep-violet font-bold animate-pulse-heart-slow" style="text-shadow: 3px 3px 5px rgba(93, 63, 211, 0.2);">
        Yayyyyy
    </div>
    
    <!-- The main lock prompt content -->
    <div id="lock-content" class="lock-content">
        <h2 class="text-4xl text-deep-violet mb-6">ðŸ”’ The song is lockedd! ðŸ’–</h2>
        <p class="text-xl text-gray-600 mb-4">
            Answer to unlock! What is your favorite memory with me?
        </p>
        <input type="text" id="memory-input" placeholder="Type your beautiful memory here..." 
               class="w-full p-3 mb-6 border-2 border-soft-rose rounded-xl focus:ring-2 focus:ring-deep-violet focus:border-deep-violet transition duration-300">
        <button id="unlock-button" class="unlock-button text-lg">
            Unlock Page
        </button>
        <p id="error-message" class="text-red-500 text-sm mt-3 hidden">If our answer matches the page will be unclocked!!</p>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const unlockButton = document.getElementById('unlock-button');
            const memoryInput = document.getElementById('memory-input');
            const lockContent = document.getElementById('lock-content');
            const yayMessage = document.getElementById('yay-message');
            const errorMessage = document.getElementById('error-message');

            const REDIRECT_DELAY_MS = 1500; // 1.5 seconds delay before loading the next page

            // --- Unlock Logic ---
            unlockButton.addEventListener('click', () => {
                const memory = memoryInput.value.trim();

                if (memory === '') {
                    errorMessage.classList.remove('hidden');
                    return;
                }

                errorMessage.classList.add('hidden');
                
                // 1. Hide the lock prompt
                lockContent.style.opacity = '0';
                lockContent.style.transition = 'opacity 0.3s ease-out';
                
                // 2. Show the "Yayyyyy" message
                setTimeout(() => {
                    yayMessage.style.opacity = '1';
                }, 300);

                // 3. Redirect to the final page after the delay
                setTimeout(() => {
                    window.location.href = 'final_birthday_page.html';
                }, REDIRECT_DELAY_MS); 
            });
        });
    </script>

</body>
